{
    "compilerOptions": {
      "target": "ES2017",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["dom", "dom.iterable", "esnext"],
      "allowJs": true,
      "skipLibCheck": true,
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "paths": {
        "@/*": ["./src/*"]
      }
    },
    "include": ["src/scripts/**/*.ts"],
    "exclude": ["node_modules"]
  }